<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="300.0" prefWidth="300.0" styleClass="background" stylesheets="@css/DarkTheme.css"
            xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.PersonAddController">
    <children>
        <GridPane prefWidth="265.0" AnchorPane.bottomAnchor="80.0" AnchorPane.leftAnchor="15.0"
                  AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="140.0" minWidth="10.0" prefWidth="81.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="209.0" minWidth="10.0" prefWidth="209.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label text="First Name:"/>
                <Label text="Last Name:" GridPane.rowIndex="1"/>
                <Label text="Email:" GridPane.rowIndex="2"/>
                <Label text="City:" GridPane.rowIndex="3"/>
                <Label text="Birthday:" GridPane.rowIndex="4"/>
                <JFXTextField fx:id="firstNameField" focusColor="WHITE" promptText="Name..." styleClass="label-bright"
                              GridPane.columnIndex="1"/>
                <JFXTextField fx:id="lastNameField" focusColor="WHITE" promptText="Surname..." styleClass="label-bright"
                              GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <JFXTextField fx:id="emailField" focusColor="WHITE" promptText="email@example.com"
                              styleClass="label-bright" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <JFXTextField fx:id="cityField" focusColor="WHITE" promptText="City..." styleClass="label-bright"
                              GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                <JFXTextField fx:id="birthdayField" focusColor="WHITE" promptText="YYYY-MM-DD" styleClass="label-bright"
                              GridPane.columnIndex="1" GridPane.rowIndex="4"/>
            </children>
        </GridPane>
        <ButtonBar prefHeight="40.0" prefWidth="285.0" AnchorPane.bottomAnchor="5.0" AnchorPane.rightAnchor="15.0">
            <buttons>
                <JFXButton fx:id="saveButton" buttonType="RAISED" layoutX="135.0" layoutY="18.0"
                           onAction="#saveOnAction" prefHeight="33.0" prefWidth="171.0"
                           style="-fx-background-color: #000000;" text="Save" textFill="WHITE" textOverrun="CLIP"/>
                <JFXButton fx:id="cancelButton" buttonType="RAISED" layoutX="135.0" layoutY="18.0"
                           onAction="#cancelOnAction" style="-fx-background-color: #000000;" text="Cancel"
                           textFill="WHITE"/>
            </buttons>
        </ButtonBar>
    </children>
</AnchorPane>
